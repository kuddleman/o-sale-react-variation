    <div class="container mt-4">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h1 class="text-center form-header-style mt-5 pt-2 pb-3">
            Sign In
          </h1>

            <div class="form-body-style px-5 pt-4">
              <%= form_with url: signin_path do |f| %>
                <div class="form-group row">
                  <div class="col-md-2 col-form-label">
                    <%= f.label :email %>
                  </div>
                  <div class="col-md-9">
                    <%= f.email_field :email, class: "form-control",  placeholder: "Your email address", autofocus: true %>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-2 col-form-label">
                    <%= f.label :password %>
                  </div>
                  <div class="col-md-9">
                    <%= f.password_field :password, class: "form-control",  placeholder: "Your password address" %>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-9 offset-md-2">
                    <%= f.submit 'Sign in', class: "btn btn-outline-purple"%>
                  </div>
                </div>

              <% end %>
            </div>
        </div>
      </div>
    </div>