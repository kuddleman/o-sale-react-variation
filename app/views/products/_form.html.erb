<div class="form-body-style px-5 pt-4">
  <%= form_with model: @product, local: true do |f| %>
    <%= render 'shared/errors', object: @product %>

    <div class="form-group row">
      <div class="col-md-3 col-form-label">
        <%= f.label :name %>
      </div>
      <div class="col-md-9">
        <%= 
          f.text_field :name, 
          class: "form-control", 
          placeholder: "Product name", 
          autofocus: true 
        %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 col-form-label">
        <%= f.label :price %>
      </div>
      <div class="col-md-9">
        <%= 
          f.text_field :price, 
          class: "form-control", 
          placeholder: "Product price" 
        %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 col-form-label">
        <%= f.label :description %>
      </div>
      <div class="col-md-9">
        <%= 
          f.text_area :description, 
          class: "form-control", 
          placeholder: "Product description",
          rows: '5'
        %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 col-form-label">
        <%= f.label :quantity %>
      </div>
      <div class="col-md-9">
        <%= 
          f.number_field :quantity, 
          class: "form-control", 
          placeholder: "Product quantity" 
        %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 col-form-label">
        <%= f.label :image_url, 'Image' %>
      </div>
      <div class="col-md-9">
        <%= 
          f.file_field :image_url, 
          class: "form-control"
        %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-9 offset-md-3">
      <%= f.submit class: "btn btn-outline-purple" %>
      </div>
    </div>

  <% end %>
</div>